    DiscordButton.TextColor3 = Color3.fromRGB(130, 140, 255)
end)

DiscordButton.MouseLeave:Connect(function()
    DiscordButton.TextColor3 = Color3.fromRGB(88, 101, 242)
end)

DiscordButton.MouseButton1Click:Connect(function()
    -- Copy to clipboard
    local link = "https://discord.gg/jqnxqc7cnj"
    
    if setclipboard then
        setclipboard(link)
    elseif toclipboard then
        toclipboard(link)
    elseif Clipboard and Clipboard.set then
        Clipboard.set(link)
    elseif syn and syn.write_clipboard then
        syn.write_clipboard(link)
    end
    
    -- Show notification
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "CoreX",
        Text = "Discord link copied to clipboard!",
        Duration = 3
    })
    
    -- Brief color flash feedback
    DiscordButton.TextColor3 = Color3.fromRGB(0, 200, 100)
    task.delay(0.5, function()
        DiscordButton.TextColor3 = Color3.fromRGB(88, 101, 242)
    end)
end)

