-- ==================== DROPDOWN FUNCTIONALITY ====================

local dropdownOpen = false
local selectedScript = nil

local function createDropdownItem(scriptData, index)
    local item = Instance.new("TextButton")
    item.Name = "Item_" .. index
    item.Size = UDim2.new(1, 0, 0, 35)
    item.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    item.Text = "  " .. scriptData.name
    item.TextColor3 = Color3.fromRGB(200, 200, 200)
    item.TextSize = 14
    item.Font = Enum.Font.Gotham
    item.TextXAlignment = Enum.TextXAlignment.Left
    item.BorderSizePixel = 0
    item.LayoutOrder = index
    item.ZIndex = 5
    item.Parent = DropdownList
    
    item.MouseEnter:Connect(function()
        item.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    end)
    
    item.MouseLeave:Connect(function()
        item.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    end)
    
    item.MouseButton1Click:Connect(function()
        selectedScript = scriptData
        DropdownButton.Text = "  " .. scriptData.name
        dropdownOpen = false
        DropdownList.Visible = false
        DropdownArrow.Text = "▼"
    end)
    
    return item
end

for i, scriptData in ipairs(Scripts) do
    createDropdownItem(scriptData, i)
end

DropdownList.Size = UDim2.new(1, -120, 0, #Scripts * 37)

DropdownButton.MouseButton1Click:Connect(function()
    dropdownOpen = not dropdownOpen
    DropdownList.Visible = dropdownOpen
    DropdownArrow.Text = dropdownOpen and "▲" or "▼"
end)

-- ==================== EXECUTE FUNCTIONALITY ====================

ExecuteButton.MouseButton1Click:Connect(function()
    if selectedScript then
        local scriptCode = selectedScript.code
        
        ExecuteButton.BackgroundColor3 = Color3.fromRGB(0, 150, 100)
        ExecuteButton.Text = "Running..."
        
        local success, err = pcall(function()
            loadstring(scriptCode)()
        end)
        
        if success then
            print("Script executed successfully!")
        else
            warn("Script error: " .. tostring(err))
            ExecuteButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
            ExecuteButton.Text = "Error!"
        end
        
        task.delay(1, function()
            ExecuteButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            ExecuteButton.Text = "Execute"
        end)
    else
        ExecuteButton.Text = "Select!"
        task.delay(0.8, function()
            ExecuteButton.Text = "Execute"
        end)
    end
end)

ExecuteButton.MouseEnter:Connect(function()
    ExecuteButton.BackgroundColor3 = Color3.fromRGB(65, 65, 65)
end)

ExecuteButton.MouseLeave:Connect(function()
    ExecuteButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
end)

CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    NeonBorderOuter.Visible = false
end)

CloseButton.MouseEnter:Connect(function()
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
end)

CloseButton.MouseLeave:Connect(function()
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
end)

-- ==================== DRAGGABLE GUI ====================

local dragging = false
local dragInput
local dragStart
local startPos

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        local newPos = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        MainFrame.Position = newPos
        NeonBorderOuter.Position = UDim2.new(newPos.X.Scale, newPos.X.Offset - 3, newPos.Y.Scale, newPos.Y.Offset - 3)
    end
end)

-- ==================== NEON ANIMATION ====================

local function animateNeonGlow()
    while true do
        for rotation = 0, 360, 2 do
            if GlowGradient and GlowGradient.Parent then
                GlowGradient.Rotation = rotation
                if GlowBlur1Gradient and GlowBlur1Gradient.Parent then
                    GlowBlur1Gradient.Rotation = rotation
                end
            end
            task.wait(0.02)
        end
    end
end

-- ==================== LOADING ANIMATION ====================

local function startLoading()
    StartupSound:Play()
    
    local logoTween = TweenService:Create(LogoImage, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        ImageTransparency = 0
    })
    logoTween:Play()
    logoTween.Completed:Wait()
    
    task.wait(1.5)
    
    local fadeOutTween = TweenService:Create(LogoImage, TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
        ImageTransparency = 1
    })
    fadeOutTween:Play()
    fadeOutTween.Completed:Wait()
    
    local overlayFadeTween = TweenService:Create(LoadingOverlay, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
        BackgroundTransparency = 1
    })
    overlayFadeTween:Play()
    overlayFadeTween.Completed:Wait()
    
    LoadingOverlay.Visible = false
    
    task.spawn(animateNeonGlow)
end

startLoading()

print("CoreX Script Executor Loaded Successfully!")
